#Main-body {
  background: url(https://images.unsplash.com/photo-1571866735550-7b1ae3bdb144?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80) no-repeat center fixed;
  background-size: cover;
  height: 100vh;
  margin: 0px;
}

.container-below {
  text-align: center;
  margin-top: 320px;
  margin-left:45px;
}

.below-text {
  font-size: xx-large;
  font-family: "Lato", sans-serif;
  font-weight: 900;
  box-sizing: border-box;
  display: inline-table;
  list-style: none;
  margin-right: 75px;
  margin-bottom: 50px;
}

.below-text a {
  display: block;
  text-align: center;
  line-height: 50px;
  color: white;
  text-decoration: none;
  cursor: pointer;
  transition: 0.5s;
  font-family: 'Josefin Sans', cursive;
  font-size: 40px;
}

.below-text img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  opacity: 0;
}

.container-below .below-text :hover {
  text-shadow: 0 0 8px #ff0000;
}

.container-below .below-text :hover + img {
  opacity: 1;
  transition: 1.5s;
}

.nav-main {
  overflow: hidden;
  width: 100%;
  height:60px;
  color: black;
  text-align:center;
  font-size: small;
  background-color: black;
}

.nav-main a {
  float: right;
  color: white;
  text-align: center;
  padding: 14px 35px;
  text-decoration: none;
  font-size: 15px;
  text-transform: uppercase;
  align-items: center;
}

.nav-main a:hover {
  text-shadow: 0 0 10px white;
  text-decoration: underline;
}

.nav-head {
  float: left;
  text-decoration: none;
  font-size: 12px;
  margin-top: 0px;
}

