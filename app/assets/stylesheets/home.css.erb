.container-below {
  text-align: center;
  margin-top: 250px;
}

.below-text {
  font-size: xx-large;
  font-family: "Lato", sans-serif;
  font-weight: 900;
  box-sizing: border-box;
  display: inline-table;
  list-style: none;
  margin-right: 50px;
  margin-bottom: 50px;
}
.below-text a {
  display: block;
  text-align: center;
  line-height: 50px;
  color: white;
  text-decoration: none;
  cursor: pointer;
  transition: 0.5s;
  font-family: "Abel", sans-serif;
  font-weight: bold;
  font-size: 70px;
}
.below-text img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  opacity: 0;
}
.container-below .below-text :hover {
  text-shadow: 0 0 8px #ff0000;
  text-decoration: underline;
}

.container-below .below-text :hover + img {
  opacity: 1;
  transition: 1.5s;
}

.nav-main {
  overflow: hidden;
  width: 100%;
  height:60px;
  color: black;
  text-align:center;
  font-size: small;
  background-color: black;
}

.nav-main a {
  float: right;
  color: white;
  text-align: center;
  padding: 14px 35px;
  text-decoration: none;
  font-size: 15px;
  text-transform: uppercase;
  align-items: center;
}

.nav-main a:hover {
  text-shadow: 0 0 10px white;
  text-decoration: underline;
}

.nav-head {
  float: left;
  text-decoration: none;
  font-size: 12px;
  margin-top: 0px;
}

@media only screen and (max-width: 400px) {
  ul {
    flex-direction: column;
  }
}
.error {
  color: white;
  background-color: red;
  position: absolute;
  margin-left: 36%;
  width: 500px;
  height: 30px;
  border-radius: 25px;
  display: block;
  line-height: 25px;
  text-align: center;
  justify-content: center;
}

.notice {
  color: white;
  background-color: green;
  margin-left: 36%;
  width: 500px;
  height: 30px;
  border-radius: 25px;
  display: block;
  line-height: 25px;
  text-align: center;
  justify-content: center;
}

.slideshow {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;

  margin: 0;
  padding: 0;
}

.slideshow .below-text:hover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-size: cover;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  opacity: 0;
  z-index: 0;
  background-color: green;
  animation: imageAnimation 50s linear infinite;
}

.insta-icon {
  background-image: url(<%=asset_path"icons8-instagram-48"%>);
  background-repeat: no-repeat;
    margin-top: 1px;
  height: 46px;
}

.fb-icon {
