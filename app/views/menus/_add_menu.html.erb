

  <div class="MenuItem-conatiner">
    <p class="MenuItem-title"><%=section_title_1%></p>
    <%=form_with url:menu_items_path ,method: :post do |form|%>

      <div class="add-item">
        <p class="item-label">Item Name: </p>
        <%= form.text_field :item ,class:"item-input"%>
      </div>

      <div class ="add-section">
      <p class="item-label">Rate / item: </p>
      <%= form.text_field :rate, class:"item-input"%>
      </div>

      <div class="add-section">
        <p class="item-label">description : </p>
        <%= form.select'description', raw("<option selected disabled>select</option><option>south indian</option><option>north indian</option><option>chineese</option><option>tandoori</option>"), class:"item-input"%>
      </div>

      <div class="add-section">
        <p class="item-label">Category Id: </p>
        <%= form.select 'category', raw("<option selected disabled>select</option><option>Breakfast</option><option>lunch</option><option>Dinner</option><optionCold Drinks</option>"), class:"item-input"%>
      </div>

      <div class="add-section">
        <p class="item-label">MenuName: </p>
        <%= form.select 'menu', options_for_select(menu.collect{ |u| [u.name, u.id] }) , class:"item-input"%>
      </div>

      <div class="add-section">
        <%=form.submit "add", class:"item-submit" %>
      </div>

     <%end%>
  </div>

  <div class="AddMenu-container">
    <p class="add-MenuItemHeader"><%= section_title_2%></p>
    <%=form_with url:menus_path ,method: :post do |form|%>
      <div class="add-item">
        <p class="item-label">Menu Name: </p>
        <%= form.text_field :menu ,class:"item-input"%>
      </div>
      <div class="add-section">
        <%=form.submit "add", class:"item-submit" %>
      </div>
    <%end%>
  </div>

  <div class="Menu-container">
    <p class="add-MenuItemHeader"><%=section_title_3%></p>
    <em>Currently displaying-<%=@menu.name%> </em>

      <%menu.each do |m|%>
        <div class="Menu-list">
          <%= m.name %>
          <%= form_with(url: menu_path(m.id), method: :get, local: true) do %>
          <%submit_tag("edit" , class: "form-submit")%>
          <%end%>
        </div>
      <% end %>

  </div>
