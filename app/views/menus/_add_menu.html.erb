
  <div>
    <p class="Menu-title"><%=section_title_1%></p>
    <%=form_with url:menu_items_path ,method: :post do |form|%>

      <div class="add-item">
        <p class="item-label">item : </p>
        <%= form.text_field :item ,class:"item-input"%>
      </div>

      <div class="add-section">
      <p class="item-label">description : </p>
      <%= form.select'description', raw("<option selected disabled>Select</option><option>south indian</option><option>north indian</option><option>chineese</option><option>tandoori</option>"), class:"item-input"%>
      </div>
       <div class="add-section">
      <p class="item-label">category : </p>
      <%= form.select'category', raw("<option selected disabled>Select</option><option>Breakfast</option><option>lunch</option><option>Dinner</option><option>Cold Drinks</option>"), class:"item-input"%>
      </div>
       <div class="add-section">
       <p class="item-label">Menu : </p>
      <%= form.select 'menu', options_for_select(menu.collect{ |u| [u.name, u.id] }) , class:"item-input"%>
      </div>

      <div class="add-section">
        <%=form.submit "add", class:"item-submit" %>
      </div>

     <%end%>
  </div>

  <div>
    <p class="add-MenuHeader"><%= section_title_2%></p>
    <%=form_with url:menus_path ,method: :post do |form|%>

        <div class="add-item">
          <p class="item-label">menu : </p>
          <%= form.text_field :menu ,class:"item-input"%>
         <div>
         <div class="add-section">
       <%=form.submit "add", class:"item-submit" %>
      </div>
    <%end%>
  </div>

  <div>

            <p>available menus </p>
             <p>to delete the present menu, please change the menu displayed </p>
            <%menu.each do |m|%>
             <li>
               <%= m.name %>
               <%=m.id%>
               <%= @current_menu_id%>
               <% if m.id != @current_menu_id%>
                 <%= form_with(url: menu_path(m.id), method: :delete) do %>
                   <input class="Img-Trash" type="image" src="interface.png">
                 <%end%>
               <%end%>
               <br>
              </li>
             <% end %>




    </div>
