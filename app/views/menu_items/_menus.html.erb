
<main id="table-body">
   <div class= <%=(@current_user.role != "owner") ? "MenuList":"MenuList-box" %> >
      <p><%=section_title%></p>

      <section class="menu-card">
         <% menus.each do |item| %>
            <div class="card">
               <img src="<%=item.image%>"  alt="roasted meat">
               <div class="blogcontent">
                  <h3> <%= item.name%><span style="margin: 10px 0px;" >Rs.<%=item.price %></span></h3>
                  <span><%=item.description%></span>
                  <%if user_role == "user"%>
                     <% order = Order.current_order(@current_user)%>
                     <%if order==nil%>
                      <%order= Order.create!(user_id: @current_user.id,
                                    date: Date.today,
                                    status: "not placed")%>
                      <%end%>
                  <%elsif user_role == "clerk"%>
                     <% order = Order.current_order(@customer)%>
                     <%if order==nil%>
                      <%order= Order.create!(user_id: @customer.id,
                                    date: Date.today,
                                    status: "not placed")%>
                      <%end%>
                  <% end %>
                     <% orderitem = OrderItem.find_by(order_id: order.id, menu_item_id: item.id) if order%>
                     <%if orderitem%>
                        <p> quantity :
                           <span class="quantity-box">
                           <%= link_to "−", remove_path(id:orderitem.id), method: "post", class: "minus" %>
                           <%= orderitem.quantity %>
                           <%= link_to "＋", add_path(id:orderitem.id), method: "post", class: "plus"  %>
                           </span>
                        </p>
                     <%else%>
                        <% if user_role == "user"%>
                           <%= form_with(url: create_order_item_path(id:item.id), method: :post) do %>
                              <%= button_tag 'Add',type:'submit', :remote => true%>
                           <% end %>
                        <%elsif user_role == "clerk"%>
                           <%= form_with(url: offline_customer_path(id: item.id), method: :post) do %>
                              <%= button_tag 'Add',type:'submit'%>
                           <% end %>
                       <%end%>
                    <%end%>
               </div>
            </div>

         <% end %>
   </section>
  </div>
</main>
