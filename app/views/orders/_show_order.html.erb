              <%order2= Order.create!(user_id: @current_user.id,
                                    date: Date.today,

                                    status: "not placed")%>
            <%end%>
  <%elsif user_role == "clerk"%>
        <% order2 = Order.current_order(@customer)%>
            <%if order2==nil%>
                <%order2= Order.create!(user_id: @customer.id,
                                    date: Date.today,
                                    status: "not placed")%>
            <%end%> 

  <% end %>
 

